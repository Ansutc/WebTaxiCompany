@page
@model WebTaxiCompany.Pages.Positions.IndexModel

@{
    ViewData["Title"] = "Должности";
}

<h1>Должности</h1>

<p>
    <a asp-page="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Position[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position[0].Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position[0].Responsibility)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position[0].Requirement)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Position) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Responsibility)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Requirement)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PositionKey">Редактировать</a> |
                <a asp-page="./Details" asp-route-id="@item.PositionKey">Подробнее</a> |
                <a asp-page="./Delete" asp-route-id="@item.PositionKey">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
