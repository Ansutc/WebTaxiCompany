@page
@model WebTaxiCompany.Pages.Calls.CreateModel

@{
    ViewData["Title"] = "Создание";
}

<h1>Создание</h1>

<h4>Вызов</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Call.Date" class="control-label"></label>
                <input asp-for="Call.Date" class="form-control" />
                <span asp-validation-for="Call.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Call.Time" class="control-label"></label>
                <input asp-for="Call.Time" class="form-control" />
                <span asp-validation-for="Call.Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Call.Number" class="control-label"></label>
                <input asp-for="Call.Number" class="form-control" />
                <span asp-validation-for="Call.Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Call.WhereFrom" class="control-label"></label>
                <input asp-for="Call.WhereFrom" class="form-control" />
                <span asp-validation-for="Call.WhereFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Call.WhereTo" class="control-label"></label>
                <input asp-for="Call.WhereTo" class="form-control" />
                <span asp-validation-for="Call.WhereTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Call.RateKey" class="control-label"></label>
                <select asp-for="Call.RateKey" class ="form-control" asp-items="ViewBag.RateKey"></select>
            </div>
            <div class="form-group">
                <label asp-for="Call.CarKey" class="control-label"></label>
                <select asp-for="Call.CarKey" class ="form-control" asp-items="ViewBag.CarKey"></select>
            </div>
            <div class="form-group">
                <label asp-for="Call.AddServiceKey" class="control-label"></label>
                <select asp-for="Call.AddServiceKey" class ="form-control" asp-items="ViewBag.AddServiceKey"></select>
            </div>
            <div class="form-group">
                <label asp-for="Call.EmployeeKey" class="control-label"></label>
                <select asp-for="Call.EmployeeKey" class ="form-control" asp-items="ViewBag.EmployeeKey"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
