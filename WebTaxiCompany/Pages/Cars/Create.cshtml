@page
@model WebTaxiCompany.Pages.Cars.CreateModel

@{
    ViewData["Title"] = "Создание";
}

<h1>Создание</h1>

<h4>Автомобиль</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Car.CarKey" class="control-label"></label>
                <input asp-for="Car.CarKey" class="form-control" />
                <span asp-validation-for="Car.CarKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.BrandKey" class="control-label"></label>
                <select asp-for="Car.BrandKey" class ="form-control" asp-items="ViewBag.BrandKey"></select>
            </div>
            <div class="form-group">
                <label asp-for="Car.RegistrationNumber" class="control-label"></label>
                <input asp-for="Car.RegistrationNumber" class="form-control" />
                <span asp-validation-for="Car.RegistrationNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.BodNumber" class="control-label"></label>
                <input asp-for="Car.BodNumber" class="form-control" />
                <span asp-validation-for="Car.BodNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.EngineNumber" class="control-label"></label>
                <input asp-for="Car.EngineNumber" class="form-control" />
                <span asp-validation-for="Car.EngineNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.YearOfIssue" class="control-label"></label>
                <input asp-for="Car.YearOfIssue" class="form-control" />
                <span asp-validation-for="Car.YearOfIssue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Mileage" class="control-label"></label>
                <input asp-for="Car.Mileage" class="form-control" />
                <span asp-validation-for="Car.Mileage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.EmployeeKey" class="control-label"></label>
                <select asp-for="Car.EmployeeKey" class ="form-control" asp-items="ViewBag.EmployeeKey"></select>
            </div>
            <div class="form-group">
                <label asp-for="Car.MaintenanceDate" class="control-label"></label>
                <input asp-for="Car.MaintenanceDate" class="form-control" />
                <span asp-validation-for="Car.MaintenanceDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.MechanicKeyEmployeeKey" class="control-label"></label>
                <select asp-for="Car.MechanicKeyEmployeeKey" class ="form-control" asp-items="ViewBag.MechanicKeyEmployeeKey"></select>
            </div>
            <div class="form-group">
                <label asp-for="Car.SpecialMarks" class="control-label"></label>
                <input asp-for="Car.SpecialMarks" class="form-control" />
                <span asp-validation-for="Car.SpecialMarks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
