@page
@model WebTaxiCompany.Pages.AddServices.IndexModel

@{
    ViewData["Title"] = "Доп. услуги";
}

<h1>Доп. услуги</h1>

<p>
    <a asp-page="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AddService[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddService[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddService[0].Cost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AddService) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.AddServiceKey">Редактировать</a> |
                <a asp-page="./Details" asp-route-id="@item.AddServiceKey">Подробнее</a> |
                <a asp-page="./Delete" asp-route-id="@item.AddServiceKey">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
